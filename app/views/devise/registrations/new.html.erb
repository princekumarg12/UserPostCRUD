<div class="container w-50 p-3">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :first_name,class:'form-label' %><br />
      <%= f.text_field :first_name, autocomplete: "first_name",class:'form-control' %>
    </div>
    <div class="field">
      <%= f.label :last_name,class:'form-label' %><br />
      <%= f.text_field :last_name, autocomplete: "last_name",class:'form-control' %>
    </div>
    <div class="field">
      <%= f.label :username,class:'form-label' %><br />
      <%= f.text_field :username, autocomplete: "username",class:'form-control' %>
    </div>
    <div class="field">
      <%= f.label :age,class:'form-label' %><br />
      <%= f.text_field :age, autocomplete: "age",class:'form-control' %>
    </div>
    <div class="field">
      <%= f.label :gender %><br />
      <%= f.radio_button :gender,'Male' %>Male
      <%= f.radio_button :gender,'female' %>Female
    </div>

    <div class="field">
      <%= f.label :email,class:'form-label' %><br />
      <%= f.email_field :email, autocomplete: "email",class:'form-control' %>
    </div>

    <div class="field">
      <%= f.label :password,class:'form-label' %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",class:'form-control' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation,class:'form-label'%><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class:'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up",class:'btn btn-outline-success' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
<script>
    $(document).ready(function (){
        function createUsername()  {
            var fname = $('#user_first_name').val().toLowerCase();

            var lname = $('#user_last_name').val().toLowerCase();
            var username = fname + lname;
            $('#user_username').val(username.replace(/\s/g,''));
        }

        $('#user_first_name').on('keyup', createUsername);
        $('#user_last_name').on('keyup', createUsername);
    });
</script>
