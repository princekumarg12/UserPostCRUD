<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10 col-sm-12">
      <h4 class="text-center mb-4">Show Post</h4>

      <table class="table table-bordered table-striped">
        <tr>
          <th>ID</th>
          <td><%= @post.id %></td>
        </tr>
        <tr>
          <th>Poster</th>
          <td><%= @post.user.first_name %></td>
        </tr>
        <tr>
          <th>Title</th>
          <td><%= @post.title %></td>
        </tr>
        <tr>
          <th>Content</th>
          <td><%= @post.content %></td>
        </tr>
      </table>
      <%#= image_tag @post.image if @post.image.attached? %>
      <%= image_tag @post.image, class: 'resized-image' if @post.image.present? %>

    </div>
  </div>
</div>
